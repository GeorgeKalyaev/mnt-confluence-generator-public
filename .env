# Настройки базы данных
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=mnt_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Настройки Confluence
CONFLUENCE_URL=http://localhost:8090
CONFLUENCE_EMAIL=admin@test.com
CONFLUENCE_API_TOKEN=
CONFLUENCE_USERNAME=admin
CONFLUENCE_PASSWORD=admin

# ============================================
# Настройки логирования
# ============================================

# Уровень логирования: TRACE, DEBUG, INFO, WARNING, ERROR, CRITICAL
# TRACE - максимально детальная информация (для глубокой отладки)
# DEBUG - детальная информация для отладки
# INFO - информационные сообщения (рекомендуется для продакшена)
# WARNING - только предупреждения и выше
# ERROR - только ошибки
# CRITICAL - только критические ошибки
LOG_LEVEL=INFO

# Формат логов: "text" или "json"
# text - читаемый текстовый формат (по умолчанию)
# json - структурированный JSON формат (для интеграции с ELK)
LOG_FORMAT=text

# Название сервиса (для идентификации в системах мониторинга/ELK)
LOG_SERVICE_NAME=mnt-confluence-generator

# Окружение: development, staging, production
LOG_ENVIRONMENT=development

# Максимальный размер лог-файла в МБ (при достижении создается новая копия)
LOG_FILE_MAX_SIZE_MB=100

# Количество резервных копий лог-файлов (старые файлы .log.1, .log.2 и т.д.)
LOG_FILE_BACKUP_COUNT=5

# Включить логирование в файл (true/false)
LOG_ENABLE_FILE=true

# Включить логирование в консоль (true/false)
LOG_ENABLE_CONSOLE=true
